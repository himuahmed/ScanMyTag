@model QRModel

<div class="card mb-2 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.QrCode) ? "/images/noimage.png" : Model.QrCode)" class="img-thumbnail" />
    <div class="card-body">
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Name) ? "Name is not available" : Model.Name)</h5>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-route="contact-me" asp-route-url="@Model.Url"  class="btn btn-sm btn-outline-secondary">details</a>
                
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Name) ? "NA" : Model.Name)</small>
        </div>
    </div>
</div>