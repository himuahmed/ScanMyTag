<div class="container-fluid mt-4">
    <div class="centeredItem">
        <div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <div class="card mb-5 shadow-sm text-white bg-info">
            <div class="card-body">
                <h3 class="card-title text-center">Update Password</h3><hr />
                <form asp-action="ChangePassword" class="col-md-12">

                    <div class="mb-md-2">
                        <label asp-for="CurrentPassword" class="control-label"></label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-md-1">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-md-1">
                        <label asp-for="ConfirmNewPassword" class="control-label"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>


                    <input class="btn btn-success col-md-12" type="submit" value="Change Password" />
                </form>
            </div>
        </div>
    </div>

</div>



