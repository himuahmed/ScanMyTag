<div class="container-fluid mt-4">
    <div class="centeredItem">
        <div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <div class="card mb-5 shadow-sm text-white bg-info">
            <div class="card-body">
                <h3 class="card-title text-center">Sign In</h3><hr />
                <form asp-action="SignIn" class="col-md-12">

                        <div class="mb-md-2">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="anakin@darkseid.com" />
                            <span asp-validation-for="Email" class="text-light"></span>
                        </div>
                        <div class="mb-md-1">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="**********" />
                            <span asp-validation-for="Password" class="text-light"></span>
                        </div>
                        <div class="custom-control custom-checkbox mb-md-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1" asp-for="RememberMe">
                            <label class="custom-control-label" for="customCheck1">Remember Me</label>
                        </div>

                    <input class="btn btn-success col-md-12" type="submit" value="Login" />
                </form>
            </div>
        </div>
    </div>

</div>

