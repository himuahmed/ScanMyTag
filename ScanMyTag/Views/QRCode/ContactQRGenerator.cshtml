@model ScanMyTag.Models.ContactQRModel

@{
    ViewData["Title"] = "Contact Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/ckeditor/ckeditor.js"></script>
<div>
    <div class="container centeredItem">
        <div class="row">
                <div class=" col-1"></div>
                <div class=" col-10">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            @if (ViewBag.isSuccess == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    Your QR Code is Generated with name "<strong>@ViewBag.tagName</strong>".
                                </div>
                            }
                            <form asp-action="ContactQRGenerator">
                                <div asp-validation-summary="ModelOnly" class="text-white"></div>
                                <div class="form-group mb-3">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Anakin was here."/>
                                    <span asp-validation-for="Name" class="text-white"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Contact"></label>
                                    <textarea  asp-for="Contact" id="Contact" class="form-control"></textarea>
                                    <span asp-validation-for="Contact" class="text-white"></span>
                                    <script>
                                        CKEDITOR.replace("Contact");
                                    </script>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Generate QR" class="btn btn-danger"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            <div class="col-1"></div>
            </div>
    </div>
</div>
